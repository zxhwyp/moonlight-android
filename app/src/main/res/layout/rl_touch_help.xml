<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#CC24314C"
    >
    <TextView
        android:id="@+id/tv_mouse_help_title"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:textSize="31dp"
        android:background="#30D8D8D8"
        android:paddingVertical="12dp"
        android:text="触屏手势说明"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_x"
        android:padding="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/hxs_shape_light_line"
        android:layout_below="@+id/tv_mouse_help_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_mouse_help_title"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="移动/左键单击"
                android:textColor="#88FFFFFF"
                android:textStyle="bold"
                android:textSize="31dp" />

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@mipmap/ic_help_double_left" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:src="@mipmap/ic_help_handle_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="单指点击\n目标位置"
                android:textColor="#88FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="左键双击"
                android:textColor="#88FFFFFF"
                android:textStyle="bold"
                android:textSize="31dp" />

            <ImageView
                android:layout_width="105dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:src="@mipmap/ic_help_left" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:src="@mipmap/ic_help_handle_double_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="   单指连续\n单击目标位置"
                android:textColor="#88FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="右键单击"
                android:textColor="#88FFFFFF"
                android:textStyle="bold"
                android:textSize="31dp" />

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:src="@mipmap/ic_help_right" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:src="@mipmap/ic_help_handle_right"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:text="   长按\n目标位置"
                android:textColor="#88FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="拖拽/挪动"
                android:textColor="#88FFFFFF"
                android:textStyle="bold"
                android:textSize="31dp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:src="@mipmap/ic_help_move" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="43dp"
                android:src="@mipmap/ic_help_handle_move" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:text="直接拖动\n目标位置"
                android:textColor="#88FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="呼出键盘"
                android:textColor="#88FFFFFF"
                android:textStyle="bold"
                android:textSize="31dp" />

            <ImageView
                android:layout_width="86dp"
                android:layout_height="57dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp"
                android:src="@mipmap/ic_help_keyboard" />

            <ImageView
                android:layout_width="142dp"
                android:layout_height="142dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="38dp"
                android:src="@mipmap/ic_help_handle_keyboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="31dp"
                android:text="三指同时\n点击屏幕"
                android:textColor="#88FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>


</RelativeLayout>