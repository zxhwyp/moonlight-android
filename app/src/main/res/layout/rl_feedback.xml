<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <View
        android:id="@+id/view1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/shape_yellow_round"
        android:layout_alignLeft="@id/rl_background"
        android:layout_marginTop="62dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/view1"
        android:layout_marginLeft="8dp"
        android:text="这是哪个类型的反馈？"
        android:textSize="29dp"
        android:textColor="#FFFFFF"
        />
    <LinearLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="126dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/bg_feedback"
        android:layout_below="@id/view1"
        >
        <TextView
            android:id="@+id/tv_problem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:text="问题"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tv_client_advice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:text="功能请求"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tv_game_advice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:text="游戏请求"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/tv_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:text="其他"
            android:paddingTop="8dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/shape_yellow_round"
        android:layout_alignLeft="@id/rl_background"
        android:layout_marginTop="161dp"
        android:layout_below="@+id/view1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="227dp"
        android:layout_toRightOf="@+id/view1"
        android:layout_marginLeft="8dp"
        android:textSize="29dp"
        android:text="请您描述问题或提出改进建议"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/et_feedback_message"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_below="@id/view2"
        android:layout_marginTop="41dp"
        android:layout_marginHorizontal="126dp"
        android:padding="12dp"
        android:textSize="29dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_feed_et"
        android:hint="请在此输入问题内容或改进建议，最长不超过300字"
        android:textColorHint="#88FFFFFF"
        android:textAlignment="textStart"
        android:gravity="start" />
    <TextView
        android:id="@+id/tv_commit_feedback"
        android:layout_width="568dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_round_selected"
        android:layout_below="@+id/et_feedback_message"
        android:layout_marginTop="60dp"
        android:text="提交"
        android:textSize="31dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:paddingVertical="15dp"
        />
</RelativeLayout>