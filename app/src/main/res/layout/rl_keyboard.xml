        android:layout_marginRight="12dp"
        app:text="P"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_o"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_toLeftOf="@+id/key_p"
        android:layout_alignTop="@+id/key_q"
        android:layout_marginRight="12dp"
        app:text="O"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_i"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_toLeftOf="@+id/key_o"
        android:layout_alignTop="@+id/key_q"
        android:layout_marginRight="12dp"
        app:text="I"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_y"
        android:layout_width="99dp"
        android:layout_height="76dp"
        app:text="Y"
        android:layout_alignTop="@+id/key_q"
        android:layout_toLeftOf="@+id/key_u"
        android:layout_marginLeft="12dp"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_u"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_toLeftOf="@+id/key_i"
        android:layout_alignTop="@+id/key_q"
        android:layout_marginRight="12dp"
        app:text="U"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_l"
        android:layout_width="99dp"
