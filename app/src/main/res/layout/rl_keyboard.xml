        app:text="L"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_k"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_cap"
        android:layout_toLeftOf="@+id/key_l"
        android:layout_marginRight="12dp"
        app:text="K"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_j"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_cap"
        android:layout_toLeftOf="@+id/key_k"
        android:layout_marginRight="12dp"
        app:text="J"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_h"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_cap"
        android:layout_toLeftOf="@+id/key_j"
        android:layout_marginRight="12dp"
        app:text="H"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_g"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_cap"
        android:layout_toLeftOf="@+id/key_h"
        android:layout_marginRight="12dp"
        app:text="G"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_enter"
        android:layout_width="150dp"
        android:layout_height="76dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/key_shift"
        android:layout_marginRight="12dp"
        app:text="回车"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_m"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_shift"
        android:layout_toLeftOf="@+id/key_enter"
        android:layout_marginRight="12dp"
        app:text="M"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_n"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_shift"
        android:layout_toLeftOf="@+id/key_m"
        android:layout_marginRight="12dp"
        app:text="N"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_b"
        android:layout_width="99dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_shift"
        android:layout_toLeftOf="@+id/key_n"
        android:layout_marginRight="12dp"
        app:text="B"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_hide"
        android:layout_width="190dp"
        android:layout_height="76dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/key_123"
        android:layout_marginRight="12dp"
        app:src="@drawable/ic_key_hide"
        app:imgWidth="63dp"
        app:imgHeight="40dp"
        />
    <com.limelight.ui.view.HXSKeyButton
        android:id="@+id/key_space2"
        android:layout_width="210dp"
        android:layout_height="76dp"
        android:layout_alignTop="@+id/key_123"
        android:layout_toLeftOf="@+id/key_hide"
        android:layout_marginRight="12dp"
        app:text="空格"
        />
</RelativeLayout>