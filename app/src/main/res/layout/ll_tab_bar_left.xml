<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="580dp"
    android:layout_height="100dp"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginVertical="12dp"
        android:background="@mipmap/ic_tab_back" />

    <ImageView
        android:id="@+id/iv_close_tab"
        android:layout_width="111dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_tabbar" />

    <ImageView
        android:id="@+id/iv_shutdown"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:paddingVertical="10dp"
        android:layout_toRightOf="@id/iv_close_tab"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/ic_shutdown"/>
    <TextView
        android:id="@+id/tv_shutdown"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:paddingLeft="3dp"
        android:layout_toRightOf="@+id/iv_shutdown"
        android:textSize="24dp"
        android:text="关闭"
        android:layout_marginLeft="12dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical" />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:src="@mipmap/ic_back"
        android:layout_toRightOf="@+id/tv_shutdown"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:textSize="24dp"
        android:text="返回"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_marginLeft="12dp"
        />
    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_toRightOf="@id/tv_back"
        android:src="@mipmap/ic_setting"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_toRightOf="@id/iv_setting"
        android:textSize="24dp"
        android:textColor="#FFFFFF"
        android:text="设置"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/iv_keyboard"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_keyboard"
        android:layout_toRightOf="@+id/tv_setting"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/tv_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_keyboard"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:text="键盘"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        />



</RelativeLayout>